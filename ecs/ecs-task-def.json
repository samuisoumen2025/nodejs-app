{
  "family": "cygnet-demo-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::465282644584:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "cygnet-demo-app",
      "image": "{{IMAGE_URI}}",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/cygnet-demo-app",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/ping || exit 1"],
        "interval": 20,
        "retries": 1,
        "timeout": 2,
        "startPeriod": 1
      }
    }
  ]
}
